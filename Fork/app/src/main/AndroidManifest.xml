<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.eshed.fork">
    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:name=".Fork"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppThemeNoActionBar">
        <activity android:name="com.eshed.fork.Login.view.LoginActivity"
            android:icon="@drawable/ic_log_out">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Recipe.view.RecipeActivity"/>
        <activity android:name="com.eshed.fork.Login.view.RegisterActivity"/>
        <activity android:name="com.eshed.fork.Browse.view.BrowseActivity"/>
        <activity android:name=".Recipe.view.NewRecipeActivity"/>
        <activity android:name=".Settings.view.SettingsActivity"/>
        <activity android:name=".StarredRecipes.view.StarredRecipesActivity"/>
        <activity android:name=".Modifications.view.ModificationsActivity"/>
        <activity android:name=".History.view.HistoryActivity"/>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

    </application>

</manifest>