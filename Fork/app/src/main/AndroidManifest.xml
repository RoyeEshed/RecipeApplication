<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.eshed.fork">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppThemeNoActionBar">
        <activity android:name=".Browse.view.BrowseActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Recipe.view.RecipeDetailActivity"/>
        <activity android:name=".Recipe.view.NewRecipeActivity"/>
        <activity android:name=".Recipe.view.ModifyRecipeActivity"/>
        <activity android:name=".Settings.SettingsActivity"/>

    </application>

</manifest>